generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  slug        String   @unique
  description String
  content     String
  series      String
  tags        String[]
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  metadata    Json     @default("{}") @db.JsonB

  @@map("posts")
}
